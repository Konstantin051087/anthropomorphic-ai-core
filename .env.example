# =============================================
# БАЗОВАЯ КОНФИГУРАЦИЯ ПРИЛОЖЕНИЯ
# =============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================
# БАЗА ДАННЫХ
# =============================================
# Локальная разработка (SQLite)
DATABASE_URL=sqlite:///./anthropomorphic_ai.db

# Продакшен (PostgreSQL - для Render)
# DATABASE_URL=postgresql://user:pass@host:port/database

# =============================================
# API И СЕРВЕР
# =============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================
# ВНЕШНИЕ СЕРВИСЫ
# =============================================
HF_TOKEN=your_huggingface_token_here
HF_MODEL_NAME=distilbert-base-uncased

# =============================================
# БЕЗОПАСНОСТЬ
# =============================================
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================
# ПУТИ К КОНФИГУРАЦИОННЫМ ФАЙЛАМ
# =============================================
SYSTEM_CONFIG_PATH=./data/configs/system_config.json
PSYCHE_CONFIG_PATH=./data/configs/psyche_config.json
MEMORY_CONFIG_PATH=./data/configs/memory_config.json
MOOD_CONFIG_PATH=./data/configs/mood_config.json