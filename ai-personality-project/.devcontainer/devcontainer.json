{
    "name": "AI Personality Project",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "postCreateCommand": "pip3 install --user -r requirements.txt && python3 -c \"from main import app, db; app.app_context().push(); db.create_all()\"",
    "postStartCommand": "echo 'ðŸš€ AI Personality Project is ready! Run: python3 main.py'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "formulahendry.auto-rename-tag",
                "bradlc.vscode-tailwindcss",
                "github.copilot",
                "ms-vscode.makefile-tools"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "python.linting.flake8Enabled": true,
                "editor.formatOnSave": true,
                "files.autoSave": "afterDelay"
            }
        }
    },
    "forwardPorts": [5000, 7860],
    "portsAttributes": {
        "5000": {
            "label": "Flask App",
            "onAutoForward": "notify"
        },
        "7860": {
            "label": "Gradio App",
            "onAutoForward": "notify"
        }
    },
    "remoteUser": "vscode"
}